  background: var(--color-primary);
  transform: scaleX(0);
  transition: transform 200ms ease;
}

.nav__link:hover {
  color: var(--color-primary);
}

.nav__link:hover::after {
  transform: scaleX(1);
}

/* Responsive Navigation
   ========================================================================== */
@media (max-width: 768px) {
  .nav {
    grid-template-columns: 1fr;
    gap: var(--spacing-md);
  }

