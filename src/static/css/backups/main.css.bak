.form-checkbox,
.form-radio {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  cursor: pointer;
}

.form-checkbox input[type="checkbox"],
.form-radio input[type="radio"] {
  width: 1.2rem;
  height: 1.2rem;
  margin: 0;
}

/* Help Text and Validation Messages */
.form-help {
  font-size: 0.85rem;
  color: var(--color-text);
  opacity: 0.7;
}

.form-error {
  font-size: 0.85rem;
  color: var(--color-danger);
  margin-top: var(--spacing-xs);
}

.form-success {
  font-size: 0.85rem;
  color: var(--color-success);
  margin-top: var(--spacing-xs);
}

/* Form Variations */
.form--compact {
  gap: var(--spacing-sm);
}

.form--compact .form-group {
  gap: var(--spacing-xs);
}

.form--inline {
  flex-direction: row;
  align-items: flex-end;
  gap: var(--spacing-md);
}

/* Form Field States */
.form-input--error {
  border-color: var(--color-danger);
}

.form-input--success {
  border-color: var(--color-success);
}

/* Loading State */
.form--loading {
  opacity: 0.7;
  pointer-events: none;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
  .form--inline {
    flex-direction: column;
    align-items: stretch;
  }

  .form-group--horizontal {
    flex-direction: column;
    align-items: stretch;
  }

  .form-input,
  .form-select {
    font-size: 16px;
    /* Prevents zoom on iOS */
  }
}
/* _navigation.css */

/* Main Navigation
   ========================================================================== */
.nav {
  max-width: var(--max-width-wide);
  margin: 0 auto;
  padding: 0 var(--spacing-md);
  display: grid;
  grid-template-columns: auto 1fr;
  gap: var(--spacing-lg);
